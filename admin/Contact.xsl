<?xml version="1.0"?><xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">	<xsl:import href="common.xsl"/>	<xsl:param name="contact" select="/RESPONSE/RESULTS[@name='contact']/CONTACT"/>	<xsl:template match="/RESPONSE">		<div id="lightbox_content">			<div id="lightbox_close">				<a href="#" onclick="close_lightbox();">Fermer</a>			</div>			<form name="display_contact_form" id="display_contact_form">				<input type="hidden" value="{//URL/ID}"	name="ID"/>				<xsl:apply-templates select="DISPLAY/*" mode="form"/>				<div class="input_button_container">					<input type="button" value="{//LABEL[@name='update']}" onclick="update_contact('{//URL/ID}');" />				</div>				<div id="lightbox_message"/>			</form>		</div>	</xsl:template>	<xsl:template match="UPDATE" mode="form"/>	<xsl:template match="DATA[@service='INFO']" mode="form">		<xsl:call-template name="form_input_text">			<xsl:with-param name="name" select="@path"/>			<xsl:with-param name="label">				<xsl:apply-templates select="." mode="label"/>			</xsl:with-param>			<xsl:with-param name="value" select="$contact/INFO/*[name() = current()/@path]"/>		</xsl:call-template>	</xsl:template>	<xsl:template match="DATA[@path='COUNTRYID' and @service='INFO']" mode="form">		<xsl:call-template name="form_select_country">			<xsl:with-param name="name" select="@path"/>			<xsl:with-param name="selected_value" select="$contact/INFO/*[name() = current()/@path]"/>		</xsl:call-template>	</xsl:template>	<xsl:template match="DATA[@service='DEPENDENCY']" mode="form">		<xsl:if test="$contact/DEPENDENCIES/DEPENDENCY[@type = current()/@type]/MEDIA">			<div class="list_container">				<label>					<xsl:apply-templates select="." mode="label"/>				</label>				<ul>					<xsl:for-each select="$contact/DEPENDENCIES/DEPENDENCY[@type = current()/@type]/MEDIA">						<li>							<xsl:apply-templates select="." mode="title"/>						</li>					</xsl:for-each>				</ul>				<br class="break"/>			</div>		</xsl:if>	</xsl:template>	<xsl:template match="GROUP" mode="form">		<div class="group" id="{@class}">			<xsl:apply-templates select="*" mode="form"/>		</div>	</xsl:template></xsl:stylesheet>