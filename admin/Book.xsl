<?xml version="1.0"?><xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">	<xsl:import href="common.xsl"/>	<xsl:template match="/RESPONSE">		<div id="lightbox_content">			<div id="lightbox_close">				<a href="#" onclick="close_lightbox();">Fermer</a>			</div>			<form name="display_book_form" id="display_book_form">				<input type="hidden" value="{//URL/ID}" name="ID"/>				<xsl:apply-templates select="DISPLAY/*" mode="form"/>				<div class="input_button_container">					<input type="button" value="{//LABEL[@name='update']}" onclick="update_book('{//URL/ID}');"/>				</div>				<div id="lightbox_message"/>			</form>		</div>	</xsl:template>	<xsl:template match="UPDATE" mode="form"/>	<xsl:template match="DATA[@service='INFO' or @service='DESCRIPTION']" mode="form">		<xsl:call-template name="form_input_text">			<xsl:with-param name="name" select="@path"/>			<xsl:with-param name="label">				<xsl:apply-templates select="." mode="label"/>			</xsl:with-param>			<xsl:with-param name="value" select="$media//*[name() = current()/@path]"/>		</xsl:call-template>	</xsl:template>	<xsl:template match="DATA[@path='COUNTRYID' and @service='INFO']" mode="form">		<xsl:call-template name="form_select_country">			<xsl:with-param name="name" select="@path"/>			<xsl:with-param name="selected_value" select="$media/INFO/*[name() = current()/@path]"/>		</xsl:call-template>	</xsl:template>	<xsl:template match="DATA[@service='DEPENDENCY']" mode="form">		<xsl:if test="$media/DEPENDENCIES/DEPENDENCY[@type = current()/@type]/*">			<div class="list_container">				<label>					<xsl:apply-templates select="." mode="label"/>				</label>				<ul>					<xsl:for-each select="$media/DEPENDENCIES/DEPENDENCY[@type = current()/@type]/*">						<li>							<xsl:apply-templates select="." mode="title"/>						</li>					</xsl:for-each>				</ul>				<br class="break"/>			</div>		</xsl:if>	</xsl:template>	<xsl:template match="DATA[@service='CATEGORY']" mode="form">		<xsl:param name="cat" select="//CATEGORY[ UNIQUENAME = current()/@path and CATEGORY ]"/>		<xsl:param name="name" select="$cat/UNIQUENAME"/>		<div class="select_container">			<label for="{$name}">				<xsl:value-of select="$cat/LABEL"/>			</label>			<select name="{$name}" id="{$name}">				<option val=""> - </option>				<xsl:for-each select="$cat/CATEGORY">					<option value="{@ID}">						<xsl:if test="$media/CATEGORIES/CATEGORY[@ID = current()/@ID]">							<xsl:attribute name="selected">selected</xsl:attribute>						</xsl:if>						<xsl:value-of select="LABEL"/>					</option>				</xsl:for-each>			</select>		</div>	</xsl:template>	<xsl:template match="GROUP" mode="form">		<div class="group" id="{@class}">			<xsl:apply-templates select="*" mode="form"/>		</div>	</xsl:template></xsl:stylesheet>