<?xml version="1.0"?><xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:LIG="http://www.citoyenparent.be" version="1.0">	<xsl:output method="text" encoding="UTF-8" omit-xml-declaration="yes"/>	<xsl:param name="apos">		<xsl:text>'</xsl:text>	</xsl:param>	<xsl:param name="new_apos">		<xsl:text>&#x2019;</xsl:text>	</xsl:param>	<xsl:template match="/RESPONSE">		<xsl:text>{"reponse":[</xsl:text>		<xsl:for-each select="RESULTS/CONTACT">			<xsl:variable name="denomination" select="translate(INFO/DENOMINATION, $apos, $new_apos)"/>			<xsl:variable name="firstname" select="translate(INFO/FIRSTNAME, $apos, $new_apos)"/>			<xsl:variable name="lastname" select="translate(INFO/LASTNAME, $apos, $new_apos)"/>			<xsl:if test="$denomination != '' or ( $firstname != '' and $lastname != '' )">				<xsl:text>"</xsl:text>				<xsl:choose>					<xsl:when test="$denomination != ''">						<xsl:value-of select="$denomination"/>					</xsl:when>					<xsl:otherwise>						<xsl:value-of select="concat($firstname, ' ', $lastname)"/>					</xsl:otherwise>				</xsl:choose>				<xsl:text>"</xsl:text>				<xsl:if test="position() != last()">					<xsl:text>, </xsl:text>				</xsl:if>			</xsl:if>		</xsl:for-each>		<xsl:text>]}</xsl:text>	</xsl:template></xsl:stylesheet>