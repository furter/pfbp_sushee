<?xml version="1.0"?><QUERY>	<!-- to display the languages in the upper right corner -->	<SEARCH name="languages" refresh="monthly"><LANGUAGES profile="Media"/></SEARCH>		<!-- the media configuration -->	<GET name="mediatype" refresh="monthly"><MEDIATYPES languageID="'+_global.NECTIL_LANGUAGEID+'"/></GET>		<!-- the dependency configuration -->	<GET name="dependencytype" refresh="monthly"><DEPENDENCY_TYPES from="media" languageID="'+_global.NECTIL_LANGUAGEID+'"/></GET></QUERY>