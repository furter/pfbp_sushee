<?xml version="1.0"?><xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">	<xsl:import href="common.xsl"/>	<xsl:template match="/RESPONSE">		<xsl:call-template name="html"/>	</xsl:template>	<xsl:template match="MEDIA" mode="h1">		<a name="top_content"/>		<xsl:variable name="text">			<xsl:apply-templates select="." mode="title"/>		</xsl:variable>		<h1>			<xsl:call-template name="titrage">				<xsl:with-param name="text" select="translate($text, $minuscules, $majuscules)"/>				<xsl:with-param name="color" select="$red"/>				<xsl:with-param name="size" select="30"/>				<xsl:with-param name="font" select="'book'"/>			</xsl:call-template>		</h1>	</xsl:template>	<xsl:template match="MEDIA" mode="specific">		<div id="specific">			<ol class="subnavigation">				<xsl:apply-templates select="DEPENDENCIES/DEPENDENCY[@type='mediaContent']/MEDIA" mode="inside_navigation_item"/>			</ol>			<xsl:apply-templates select="DEPENDENCIES/DEPENDENCY[@type='mediaContent']/MEDIA" mode="in_content"/>		</div>	</xsl:template>	<xsl:template match="MEDIA" mode="in_content">		<div id="m{@ID}">			<xsl:apply-templates select="." mode="attribute"/>			<a name="m{@ID}"/>			<h3>				<xsl:call-template name="numeric_title"/>			</h3>					<xsl:apply-templates select="." mode="header"/>			<a href="#top_content">				<img src="images/back_to_top.gif" alt="{//LABEL[@name='back_to_top']}" title="{//LABEL[@name='back_to_top']}"/>			</a>		</div>	</xsl:template>	<xsl:template name="numeric_title">		<xsl:value-of select="position()"/>		<xsl:text>. </xsl:text>		<xsl:apply-templates select="." mode="title"/>	</xsl:template>	<xsl:template match="MEDIA" mode="inside_navigation_item">		<li>			<a href="#m{@ID}">				<xsl:apply-templates select="." mode="title"/>			</a>		</li>	</xsl:template></xsl:stylesheet>